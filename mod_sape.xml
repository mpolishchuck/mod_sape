<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">
    <name>mod_sape</name>
    <creationDate>August 2013</creationDate>
    <author>Paul N. Maxwell</author>
    <authorEmail>admin@adment.org.ua</authorEmail>
    <authorUrl>http://adment.org.ua/</authorUrl>
    <version>0.0.3</version>
    <description>Module for placing sape.ru code to my site</description>
    <files>
        <filename module="mod_sape">mod_sape.php</filename>
        <filename>helper.php</filename>
        <filename>mod_sape.xml</filename>
        <filename>index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="sape_user" type="text" required="true" label="SAPE User" />
                <field name="link_count" label="Link count" type="list" required="true">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                </field>
                <field name="charset" type="list" label="Character set" required="true">
                    <option value="utf-8">utf-8</option>
                    <option value="windows-1251">windows-1251</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
